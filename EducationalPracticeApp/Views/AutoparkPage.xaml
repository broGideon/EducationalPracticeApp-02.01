<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="AutoparkPage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.AutoparkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.DataContext>
        <local:AutoparkViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MaxWidth="400" Width="1.2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Row="0">
                <TextBlock
                    FontSize="14"
                    FontWeight="Normal"
                    Margin="0,0,0,10"
                    Text="Транспортные средства"
                    VerticalAlignment="Center" />
                <Border
                    Background="#DBDADA"
                    CornerRadius="10"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10"
                    Padding="8,5">
                    <ComboBox
                        DisplayMemberPath="StatusName"
                        ItemsSource="{Binding Statuses}"
                        SelectedItem="{Binding SelectedStatus}"
                        Width="115"
                        materialDesign:HintAssist.Hint="Состояние">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="SelectionChanged">
                                <b:CallMethodAction MethodName="FilterTransport" TargetObject="{Binding}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </ComboBox>
                </Border>
            </Grid>
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#C7C7C7"
                BorderThickness="1"
                Grid.Row="1"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                HorizontalScrollBarVisibility="Disabled"
                IsReadOnly="True"
                ItemsSource="{Binding FilteredTransports}"
                Margin="0,10,0,0"
                RowBackground="White"
                SelectedItem="{Binding SelectedTransport}"
                VerticalScrollBarVisibility="Disabled">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Background" Value="#CECECE" />
                        <Setter Property="BorderBrush" Value="#C7C7C7" />
                        <Setter Property="Padding" Value="5,10" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Maker}"
                        Header="Производитель"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Model}"
                        Header="Модель"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding StNumber}"
                        Header="Госномер"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Status.StatusName}"
                        Header="Состояние"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding MaxPayload}"
                        Header="Макс. нагрузка"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border
            Background="#C4C4C4"
            CornerRadius="15"
            Grid.Column="1"
            Height="470"
            Margin="20,50,0,0"
            Padding="20,15"
            VerticalAlignment="Top">
            <StackPanel>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableTransport.Maker}"
                        materialDesign:HintAssist.Hint="Производитель" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableTransport.Model}"
                        materialDesign:HintAssist.Hint="Модель" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableTransport.StNumber}"
                        materialDesign:HintAssist.Hint="Госномер" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        DisplayMemberPath="StatusName"
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding Statuses}"
                        SelectedItem="{Binding EditableTransport.Status}"
                        materialDesign:HintAssist.Hint="Состояние" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding SelectedTransport.MaxPayload}"
                        materialDesign:HintAssist.Hint="Макс. нагрузка" />
                </Border>
                <Button
                    Background="#5AC365"
                    Command="{Binding AddTransportCommand}"
                    Content="Добавить новый элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C3B15A"
                    Command="{Binding UpdateTransportCommand}"
                    Content="Обновить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C35A5A"
                    Command="{Binding DeleteTransportCommand}"
                    Content="Удалить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
