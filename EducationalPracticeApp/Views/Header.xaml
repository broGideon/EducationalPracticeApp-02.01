                FontWeight="Normal"
                BorderBrush="Transparent"
                Margin="7.5, 0"
                Width="125" />
            <Button
                Content="Отчеты"
                Background="#9F9F9F"
                Foreground="Black"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
