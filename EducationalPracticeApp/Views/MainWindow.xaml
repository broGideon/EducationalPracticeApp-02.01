<Window
    Height="700"
    MinHeight="700"
    MinWidth="1000"
    Title="HomeWindow"
    Width="1000"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="MainPageClick"
                Content="Главная страница"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="145" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="AutoparkClick"
                Content="Автопарк"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="DriversClick"
                Content="Водители"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="OrdersClick"
                Content="Заказы"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="VoyageClick"
                Content="Рейсы"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="ReportsClick"
                Content="Отчеты"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
            <Button
                Background="#9F9F9F"
                BorderBrush="Transparent"
                Click="ClientsClick"
                Content="Клиенты"
                FontFamily="Inter"
                FontSize="14"
                FontWeight="Normal"
                Foreground="Black"
                Margin="7.5,0"
                Width="125" />
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            Margin="20"
            VerticalScrollBarVisibility="Auto">
            <Frame NavigationUIVisibility="Hidden" x:Name="MainFrame" />
        </ScrollViewer>
    </Grid>
</Window>
