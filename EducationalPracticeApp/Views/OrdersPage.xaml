<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="OrdersPage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.DataContext>
        <local:OrdersViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MaxWidth="400" Width="1.2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Row="0">
                <TextBlock
                    FontSize="14"
                    FontWeight="Normal"
                    Margin="0,0,0,10"
                    Text="Заказы"
                    VerticalAlignment="Center" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Margin="0,0,14,0"
                        Padding="8,5">
                        <ComboBox
                            ItemsSource="{Binding Clients}"
                            SelectedItem="{Binding SelectedClientFilter}"
                            Width="115"
                            materialDesign:HintAssist.Hint="Клиент">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat=" {0} {1}">
                                                <Binding Path="FullName" />
                                                <Binding Path="Phone" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Padding="8,5">
                        <ComboBox
                            DisplayMemberPath=""
                            ItemsSource="{Binding StatusWorks}"
                            SelectedItem="{Binding SelectedStatusFilter}"
                            Width="115"
                            materialDesign:HintAssist.Hint="Статус" />
                    </Border>
                </StackPanel>
            </Grid>
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#C7C7C7"
                BorderThickness="1"
                Grid.Row="1"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding FilteredOrders}"
                Margin="0,10,0,0"
                RowBackground="White"
                SelectedItem="{Binding SelectedOrder}"
                VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Background" Value="#CECECE" />
                        <Setter Property="BorderBrush" Value="#C7C7C7" />
                        <Setter Property="Padding" Value="5,10" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Client.FullName}"
                        Header="Клиент"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Description}"
                        Header="Описание"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Weight}"
                        Header="Вес"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding SendDate, StringFormat=\{0:dd.MM.yyyy\}}"
                        Header="Дата отправки"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding ArriveDate, StringFormat=\{0:dd.MM.yyyy\}}"
                        Header="Дата прибытия"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Status}"
                        Header="Статус"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border
            Background="#C4C4C4"
            CornerRadius="15"
            Grid.Column="1"
            Height="530"
            Margin="20,45,0,0"
            Padding="20,15">
            <StackPanel>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding Clients}"
                        SelectedItem="{Binding EditableOrder.Client}"
                        materialDesign:HintAssist.Hint="Клиент">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat=" {0} {1}">
                                            <Binding Path="FullName" />
                                            <Binding Path="Phone" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableOrder.Description}"
                        materialDesign:HintAssist.Hint="Описание" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableOrder.Weight}"
                        materialDesign:HintAssist.Hint="Вес" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <DatePicker
                        FontFamily="Inter"
                        FontSize="16"
                        SelectedDate="{Binding SendDate}"
                        materialDesign:HintAssist.Hint="Дата отправки" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <DatePicker
                        FontFamily="Inter"
                        FontSize="16"
                        SelectedDate="{Binding ArriveDate}"
                        materialDesign:HintAssist.Hint="Дата прибытия" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding StatusWorks}"
                        SelectedItem="{Binding EditableOrder.Status}"
                        materialDesign:HintAssist.Hint="Статус" />
                </Border>
                <Button
                    Background="#5AC365"
                    Command="{Binding AddOrderCommand}"
                    Content="Добавить новый элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C3B15A"
                    Command="{Binding UpdateOrderCommand}"
                    Content="Обновить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C35A5A"
                    Command="{Binding DeleteOrderCommand}"
                    Content="Удалить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
