<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="MainPage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.DataContext>
        <local:MainViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            FontFamily="Inter"
            FontSize="14"
            FontWeight="Normal"
            Grid.Column="0"
            Grid.Row="0"
            Margin="0,0,0,10"
            Text="Активные заказы"
            TextAlignment="Center" />
        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="#C7C7C7"
            BorderThickness="1"
            Grid.Column="0"
            Grid.Row="1"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding Orders}"
            RowBackground="White"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Background" Value="#CECECE" />
                    <Setter Property="BorderBrush" Value="#C7C7C7" />
                    <Setter Property="Padding" Value="5,10" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Client.FullName}"
                    Header="Клиент"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Description}"
                    Header="Описание"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Weight}"
                    Header="Вес"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding SendDate, StringFormat=\{0:dd.MM.yyyy\}}"
                    Header="Дата отправки"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding ArriveDate, StringFormat=\{0:dd.MM.yyyy\}}"
                    Header="Дата прибытия"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Status}"
                    Header="Статус"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            FontFamily="Inter"
            FontSize="14"
            FontWeight="Normal"
            Grid.Column="2"
            Grid.Row="0"
            Margin="0,0,0,10"
            Text="Транспортные средства"
            TextAlignment="Center" />
        <DataGrid
            AutoGenerateColumns="False"
            BorderBrush="#C7C7C7"
            BorderThickness="1"
            Grid.Column="2"
            Grid.Row="1"
            GridLinesVisibility="All"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding Transports}"
            RowBackground="White"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="Background" Value="#CECECE" />
                    <Setter Property="BorderBrush" Value="#C7C7C7" />
                    <Setter Property="Padding" Value="5,10" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Maker}"
                    Header="Производитель"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Model}"
                    Header="Модель"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding StNumber}"
                    Header="Госномер"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Status.StatusName}"
                    Header="Состояние"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding MaxPayload}"
                    Header="Макс. нагрузка"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
