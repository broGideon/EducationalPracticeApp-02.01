<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="MainPage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0.1*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            FontFamily="Inter"
            FontSize="14"
            FontWeight="Normal"
            Grid.Column="0"
            Grid.Row="0"
            Margin="0,0,0,10"
            Text="Активные заказы"
            TextAlignment="Center" />
        <DataGrid
            AutoGenerateColumns="False"
            Grid.Column="0"
            Grid.Row="1"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionUnit="FullRow"
            materialDesign:DataGridAssist.CellPadding="16,8"
            materialDesign:DataGridAssist.ColumnHeaderPadding="16,8">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Client.FullName}"
                    Header="Клиент"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Description}"
                    Header="Описание"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Weight}"
                    Header="Вес"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding SendDate}"
                    Header="Дата отправки"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding ArriveDate}"
                    Header="Дата прибытия"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Status}"
                    Header="Статус"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock
            FontFamily="Inter"
            FontSize="14"
            FontWeight="Normal"
            Grid.Column="2"
            Grid.Row="0"
            Margin="0,0,0,10"
            Text="Транспортные средства"
            TextAlignment="Center" />
        <DataGrid
            AutoGenerateColumns="False"
            Grid.Column="2"
            Grid.Row="1"
            HeadersVisibility="Column"
            IsReadOnly="True"
            SelectionUnit="FullRow"
            materialDesign:DataGridAssist.CellPadding="16,8"
            materialDesign:DataGridAssist.ColumnHeaderPadding="16,8">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Maker}"
                    Header="Производитель"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Model}"
                    Header="Модель"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding StNumber}"
                    Header="Госномер"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding Status.StatusName}"
                    Header="Состояние"
                    Width="*" />
                <DataGridTextColumn
                    Binding="{Binding MaxPayload}"
                    Header="Макс. нагрузка"
                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
