<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="VoyagePage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.VoyagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MaxWidth="400" Width="1.2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Row="0">
                <TextBlock
                    FontSize="14"
                    FontWeight="Normal"
                    Margin="0,0,0,10"
                    Text="Рейсы"
                    VerticalAlignment="Center" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Margin="0,0,14,0"
                        Padding="8,5">
                        <ComboBox Width="115" materialDesign:HintAssist.Hint="Статус">
                            <ComboBoxItem Content="Все" />
                            <ComboBoxItem Content="Активные" />
                            <ComboBoxItem Content="Неактивные" />
                        </ComboBox>
                    </Border>
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Padding="8,5">
                        <ComboBox Width="115" materialDesign:HintAssist.Hint="Клиент">
                            <ComboBoxItem Content="Все" />
                            <ComboBoxItem Content="Активные" />
                            <ComboBoxItem Content="Неактивные" />
                        </ComboBox>
                    </Border>
                </StackPanel>
            </Grid>
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#C7C7C7"
                BorderThickness="1"
                Grid.Row="1"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding Transports}"
                Margin="0,10,0,0"
                RowBackground="White"
                VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Background" Value="#CECECE" />
                        <Setter Property="BorderBrush" Value="#C7C7C7" />
                        <Setter Property="Padding" Value="5,10" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Transport}"
                        Header="ТС"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Order}"
                        Header="Заказ"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Driver}"
                        Header="Водитель"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding StartDate}"
                        Header="Время начала"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding EndDate}"
                        Header="Время приезда"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Status}"
                        Header="Статус"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding SendPoint}"
                        Header="Точка отправки"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding ArrivalPoint}"
                        Header="Точка доставки"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border
            Background="#C4C4C4"
            CornerRadius="15"
            Grid.Column="1"
            Height="645"
            Margin="20,45,0,0"
            Padding="20,15">
            <StackPanel>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Транспортное средство">
                        <ComboBoxItem Content="Активное" />
                        <ComboBoxItem Content="Неактивное" />
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Заказ">
                        <ComboBoxItem Content="Активное" />
                        <ComboBoxItem Content="Неактивное" />
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Водитель" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Время начала" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Время приезда" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Статус">
                        <ComboBoxItem Content="Активное" />
                        <ComboBoxItem Content="Неактивное" />
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Точка отправки" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        materialDesign:HintAssist.Hint="Точка доставки" />
                </Border>
                <Button
                    Background="#5AC365"
                    Content="Добавить новый элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C3B15A"
                    Content="Обновить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C35A5A"
                    Content="Удалить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
