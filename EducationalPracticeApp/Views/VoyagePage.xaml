<Page
    Height="auto"
    HorizontalAlignment="Stretch"
    Title="VoyagePage"
    VerticalAlignment="Stretch"
    Width="auto"
    mc:Ignorable="d"
    x:Class="EducationalPracticeApp.Views.VoyagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EducationalPracticeApp.ViewModels"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Page.DataContext>
        <local:VoyageViewModel />
    </Page.DataContext>
    <Page.Resources>
        <local:DriverConverter x:Key="DriverConverter" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition MaxWidth="400" Width="1.2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Row="0">
                <TextBlock
                    FontSize="14"
                    FontWeight="Normal"
                    Margin="0,0,0,10"
                    Text="Рейсы"
                    VerticalAlignment="Center" />
                <StackPanel
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10"
                    Orientation="Horizontal">
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Margin="0,0,14,0"
                        Padding="8,5">
                        <ComboBox
                            DisplayMemberPath=""
                            ItemsSource="{Binding StatusWorks}"
                            SelectedItem="{Binding SelectedStatusFilter}"
                            Width="115"
                            materialDesign:HintAssist.Hint="Статус" />
                    </Border>
                    <Border
                        Background="#DBDADA"
                        CornerRadius="10"
                        Padding="8,5">
                        <ComboBox
                            ItemsSource="{Binding Clients}"
                            SelectedItem="{Binding SelectedClientFilter}"
                            Width="115"
                            materialDesign:HintAssist.Hint="Клиент">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat=" {0} {1}">
                                                <Binding Path="FullName" />
                                                <Binding Path="Phone" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </Grid>
            <DataGrid
                AutoGenerateColumns="False"
                BorderBrush="#C7C7C7"
                BorderThickness="1"
                Grid.Row="1"
                GridLinesVisibility="All"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding FilteredVoyages}"
                Margin="0,10,0,0"
                RowBackground="White"
                SelectedItem="{Binding SelectedVoyage}"
                VerticalScrollBarVisibility="Auto">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Background" Value="#CECECE" />
                        <Setter Property="BorderBrush" Value="#C7C7C7" />
                        <Setter Property="Padding" Value="5,10" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="ТС" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat=" {0} {1}">
                                            <Binding Path="Transport.Model" />
                                            <Binding Path="Transport.Maker" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Binding="{Binding Order.OrderNum}"
                        Header="Заказ"
                        Width="*" />
                    <DataGridTemplateColumn Header="Водитель" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource DriverConverter}">
                                            <Binding Path="Driver.Surname" />
                                            <Binding Path="Driver.Name" />
                                            <Binding Path="Driver.MiddleName" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Binding="{Binding StartDate, StringFormat=\{0:dd.MM.yyyy\}}"
                        Header="Время начала"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding EndDate, StringFormat=\{0:dd.MM.yyyy\}}"
                        Header="Время приезда"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Status}"
                        Header="Статус"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding SendPoint}"
                        Header="Точка отправки"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding ArrivalPoint}"
                        Header="Точка доставки"
                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Border
            Background="#C4C4C4"
            CornerRadius="15"
            Grid.Column="1"
            Height="645"
            Margin="20,45,0,0"
            Padding="20,15">
            <StackPanel>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding Transports}"
                        SelectedItem="{Binding EditableVoyage.Transport}"
                        materialDesign:HintAssist.Hint="Транспортное средство">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat=" {0} {1}">
                                            <Binding Path="Maker" />
                                            <Binding Path="Model" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        DisplayMemberPath="OrderNum"
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding Orders}"
                        SelectedItem="{Binding EditableVoyage.Order}"
                        materialDesign:HintAssist.Hint="Заказ" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding Drivers}"
                        SelectedItem="{Binding EditableVoyage.Driver}"
                        materialDesign:HintAssist.Hint="Водитель">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource DriverConverter}">
                                            <Binding Path="Surname" />
                                            <Binding Path="Name" />
                                            <Binding Path="MiddleName" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <DatePicker
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableVoyage.StartDate}"
                        materialDesign:HintAssist.Hint="Время начала" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <DatePicker
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableVoyage.EndDate}"
                        materialDesign:HintAssist.Hint="Время приезда" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <ComboBox
                        FontFamily="Inter"
                        FontSize="16"
                        ItemsSource="{Binding StatusWorks}"
                        SelectedItem="{Binding EditableVoyage.Status}"
                        materialDesign:HintAssist.Hint="Статус" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableVoyage.SendPoint}"
                        materialDesign:HintAssist.Hint="Точка отправки" />
                </Border>
                <Border
                    Background="#DBDADA"
                    CornerRadius="15"
                    Margin="0,5"
                    Padding="15,10">
                    <TextBox
                        FontFamily="Inter"
                        FontSize="16"
                        Text="{Binding EditableVoyage.ArrivalPoint}"
                        materialDesign:HintAssist.Hint="Точка доставки" />
                </Border>
                <Button
                    Background="#5AC365"
                    Command="{Binding AddVoyageCommand}"
                    Content="Добавить новый элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C3B15A"
                    Command="{Binding UpdateVoyageCommand}"
                    Content="Обновить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
                <Button
                    Background="#C35A5A"
                    Command="{Binding DeleteVoyageCommand}"
                    Content="Удалить выбранный элемент"
                    FontFamily="Inter"
                    FontSize="16"
                    FontWeight="Normal"
                    Foreground="Black"
                    HorizontalContentAlignment="Left"
                    Margin="0,10"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>